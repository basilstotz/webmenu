<h1 class="shut-down-header">
  <img src="file:///usr/share/icons/Faenza/actions/48/system-shutdown.png">
  {{ i18n "logout.exit" }}
</h1>

<div class="logout-btn-container">

  <button class="btn bb-logout">
    <img src="file:///usr/share/icons/Faenza/actions/24/system-log-out.png">
    {{ i18n "logout.logout" }}
  </button>

  {{#if localBoot}}
  <button class="btn bb-shutdown">
    <img src="file:///usr/share/icons/Faenza/actions/24/system-shutdown.png">
    {{ i18n "logout.shutdown" }}
  </button>
  <button class="btn bb-reboot">
    <img src="file:///usr/share/icons/Faenza/actions/24/stock_undo.png">
    {{ i18n "logout.reboot" }}
  </button>
  {{/if}}

  <button class="btn bb-cancel">
    {{ i18n "logout.cancel" }}
  </button>
</div>
