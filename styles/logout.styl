.bb-logout-view
  width = 350px

  width width
  margin 0 auto

  a
    text-decoration none

  .now
    display block
    margin-top 5px
    padding 8px
    vertical-align middle
    height 80px
    font-size 20pt
    width width


  .shut-down-header
    margin 0.35em 0 0.75em

  .logout-btn-container

    height 110px
    width width

    .other
      margin-top 10px
      float left
      display block

    .action
      float left
      display block

    .item
      padding 0px
      display block
      width (width / 2)
      height 50px
      img
        margin-left -12px //align img/text to middle
        vertical-align middle

    .js-other
      display block
      width width

    select
      margin 0px
      padding 5px
      width 100%
      height 100%

  hr
    margin-top 1em
    margin-bottom 1em


.logout-cover-fade
  z-index 99
  position absolute
  top 0
  left 0
  right 0
  bottom 0
  background-color black

  -webkit-animation-name: fade-to-black;
  -webkit-animation-duration: 10s;

@-webkit-keyframes fade-to-black {
  0% {
    opacity 0.0
  }
  100% {
    opacity 1.0
  }
}


