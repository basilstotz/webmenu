

@import "sizes"

.bb-menu-layout
  &,
  .sidebar,
  .footer,
  .main-area,
  .header,
  .border
    position absolute

  top borderMargin
  left borderMargin
  right borderMargin
  bottom borderMargin

  .main-area,
  .footer
    right sideBarWidth

  .main-area
    disable-select()
    left borderMargin
    top headerHeight
    bottom footerHeight

  .search-container
    disable-select()
    top topMargin
    position absolute
    right sideBarWidth + contentRightMargin


  .border
    width 1px
    background-color black
    top 0px
    bottom 0px
    right sideBarWidth


  .sidebar
    width sideBarWidth
    top borderMargin
    bottom borderMargin
    right borderMargin

  .footer
    disable-select()
    height footerHeight
    left borderMargin
    bottom borderMargin
