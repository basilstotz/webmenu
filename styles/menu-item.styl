
width = 125px
height = 100px
iconSize = 50px

.bb-menu-item
  border 1px solid black
  cursor pointer
  margin 0px

  word-wrap break-word
  overflow hidden

  width width
  height height

  .osIcon, .cssIcon
    width iconSize
    height iconSize
  .cssIcon
    font-size iconSize

  .item-name
    font-size 10pt
    margin 0px
    font-weight normal

  .thumbnail
    text-align center

  .description
    display none

.selectHighlight li
  background-color red
