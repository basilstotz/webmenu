
width = 125px
height = 100px
iconSize = 50px

.bb-menu-item
  cursor pointer
  margin 0px
  padding-top 5px

  word-wrap break-word
  overflow hidden

  width width
  height height

  .osIcon, .cssIcon
    width iconSize
    height iconSize
  .cssIcon
    font-size iconSize

  .item-name
    font-size 10pt
    margin 0px
    font-weight normal

  .thumbnail
    text-align center

  .description
    display none

  &.selectHighlight
    background-color red


@-webkit-keyframes rotate {

  0% {
    -webkit-transform: rotate(0);
  }

  100% {
    -webkit-transform: rotate(1080deg);
  }
}

.rotate-loading {
  -webit-transition-timing-function: none;
  -webkit-animation-name: rotate;
  -webkit-animation-duration: 0.8s;
  -webkit-animation-iteration-count: infinite;
}
