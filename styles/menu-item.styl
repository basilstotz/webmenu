
width = 125px
height = 100px
iconSize = 50px

.bb-menu-item
  cursor pointer
  margin 0px
  padding-top 5px

  word-wrap break-word
  overflow hidden

  width width
  height height

  .osIcon, .cssIcon
    width iconSize
    height iconSize
  .cssIcon
    font-size iconSize

  .item-name
    font-size 10pt
    margin 0px
    font-weight normal

  .thumbnail
    text-align center

  .description
    display none

  &.selectHighlight
    background-color red
