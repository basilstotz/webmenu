
.bb-carousel

  position absolute

  // background-color red

  font-size 0.8em
  text-align center
  width 100%
  bottom 0px
  height 120px

  a
    text-decoration none
    &:hover
      text-decoration underline


  header
    h1
      vertical-align middle
      color rgb(111, 111, 111)
      margin 0
      margin-bottom 0.2em
      font-size 1.2em

  nav
    display inline
    vertical-align middle
    button
      border 0px
      padding 0
      margin 0
      background-color transparent
      cursor pointer

  .message
    height 65px
    // background-color yellow
    overflow hidden
    p
      text-overflow ellipsis
      font-size 0.8em




