
@import "sizes"

.bb-sidebar

  .logo
    position absolute
    bottom 5px
    right 5px

  .settings-wrapper
    disable-select()
    width 100%

  .settings-container
    overflow auto
    width 85% // shitty magic number
    margin-top 10px
    margin-left auto
    margin-right auto
    .bb-menu-item
      display inline-block
      width 50%

  .profile
    background-color #dfd7cf
    padding 0px
    margin 0px
    //line-height 0px
    height headerHeight

    img
      float left
      vertical-align middle
      height 100%

    ul
      float left
      padding 0px
      margin 0px
      list-style-type none

    li
      clear both
      padding 4px 0px 0px 4px
      margin 0px
