@import 'nib'

html,body
  background-color transparent
  height 100%
  overflow hidden

body
  font-size 100%

img
  max-width 100%
  height auto

h2
  font-size 120%

.thumbnail i
  font-size 300%
  line-height 0

.nav-pills > .active > a, .nav-pills > .active > a:hover
  background-color #B0C730
  color #333

.breadcrumb
  background-color transparent

  li
    margin-right 1%
    text-shadow 0 1px 0 #E4DFD2

    a
      background-color rgb(213, 205, 186)
      background-color rgba(213, 205, 186, 0.5)
      border-radius 3px
      padding 0.5em

    &:hover, &.current
      background-color #B0C730
      background-image -webkit-gradient(linear, left top, left bottom, from(#B0C730), to(#BBD433))
      background-image -webkit-linear-gradient(top, #B0C730, #BBD433)
      background-image -moz-linear-gradient(top, #B0C730, #BBD433)
      background-image -ms-linear-gradient(top, #B0C730, #BBD433)
      background-image -o-linear-gradient(top, #B0C730, #BBD433)
      background-image linear-gradient(top, #B0C730, #BBD433)
      color #222
      text-decoration none

.container-fluid
  border-radius 0
  box-sizing border-box
  height 100%
  margin 0
  overflow hidden
  padding 0.5em 1em
  position relative
  width 100%

.main
  margin 5% 0 0

.menu-content
  height 310px
  max-height 310px
  overflow auto

.sidebar
  border-left 2px solid rgba(90,90,90,0.7)

.row-fluid [class*="span"] .navigation
  margin-left 2.127659574468085%

.well
  background-color #F0EEE1
  background-color rgba(240, 238, 225, 0.8)

.form-search
  margin-bottom 2%

.form-horizontal
  padding 10px 0

.profile-details
  margin-bottom 2%

.user-info-details

.thumbnail
  border medium none
  box-shadow none
  font-size 80%
  line-height 1.5
  transition none
  user-select none
  word-wrap break-word

.thumbnail:hover:not(.ignore-thumbnail-hover)
  background-color rgba(237,113,19, 0.8)
  cursor pointer

.thumbnail:active:not(.ignore-thumbnail-hover)
  background-color:rgba(237,113,19, 0.5)
  box-shadow inset 0 0 10px #EDEADA

.user-img-name
  background-color #E6E6DC
  border 5px solid rgba(240, 238, 228, 0.8)
  box-sizing border-box
  padding 1em 0

.user-img-name p
  font-size 115%
  font-weight 700
  margin 0.25em 0 0

.desktop-link:hover > div i
  color rgb(65,120,107)

.desktop-link img
  max-width 64px
  width 30%

.desktop-link img ~ p
  padding-top 0.65em

.desktop-link i ~ p
  margin 0
  padding 1em 0 0

ul.thumbnails
  position relative

.popover.bottom
  margin 0

.popover.bottom .arrow
  left 37%

ul.nav
  margin-bottom 5px

.logo
  bottom 10px
  position absolute
  right 10px
  img
    box-shadow none
    padding 0
    transition all ease-in-out 500ms
    &:hover
      box-shadow inset -75px -75px 400px rgba(230,230,220,0.8)
      padding 1em

img.avatar, .logo img
  max-width 160px

button.close
  position absolute
  right 10px
  top 5px

.logout i
  color #AD0000
  line-height 1

.logout:hover
  background-color #AD0000
  // XXX: Broken!
  // background-image linear-gradient(to bottom, #BC1111, #AD0000)
  box-shadow inset 0 0 5px #555
  border-radius 4px
  color #FFF

.logout:hover i
  color #FFF

.shut-down-header
  font-size 170%
  i
    background-color #AD0000
    border-radius 3px
    color #FFF
    margin-right 0.25em
    padding 0.15em 0.05em 0.15em 0.25em
  &:hover
    color #fff

.logout-btn-container
  margin 1.5em 0 0 2.8em
  button
    margin-right 0.35em
    padding 4px 8px

// Do one thing
.justify
  text-align center

.row-fluid [class*="span"] .margin03, .margin03
  margin 0 3%

.row-fluid [class*="span"] .smooth-margin, .smooth-margin
  margin 0 0 2%

.row-fluid [class*="span"] .normal-margin
  margin-left 2.7624309392265194%

.row-fluid .margin20, .margin20
  margin 2% 0

.row-fluid [class*="span"] .margin200, .margin200
  margin 2% 0 0

.row-fluid .margin0, .margin0
  margin 0

.margin0auto
  margin 0 auto !important

.w50
  width 50%

.w60
  width 60%

.w70
  width 70%

@media (max-width 979px) and (min-width 768px)
  body
    font-size 95%

  .row-fluid .span2
    margin-left 5%

@media (max-width 768px)
  body
    font-size 90%

  .row-fluid [class*="span"] .margin03, .margin03
    margin 0

  .sidebar
    border-left none
    border-top 2px solid rgba(90,90,90,0.7)
    padding-top 1em

  ul.thumbnails li.desktop-link
    float left
    width 20%

  .w50, .w60, .w70
    width 100%

